<script>
    $(function() {
        var popup = new Foundation.Reveal($('#animatedModalForm'));
        popup.open();
        $("form[name='user']").on("submit", function(e) {
            e.preventDefault();
            var target = "login";
            var form = $(this).serializeArray();
            $.ajax({type: "post", data: form, url: target, success: function(result) {
                $("#login").text("Logout");
                $("#login").data("url", "logout");
                $(".top-bar-right ul").prepend('<li class="menu-text text-right"><button type="button" class="button" data-toggle="offCanvasRight">Actions</button></li>');
                popup.close();
            }});
        });
    });
</script>

<div class="reveal" id="animatedModalForm" data-reveal data-close-on-click="true" data-animation-in="slide-in-down" data-animation-out="slide-out-up">
    {{ form_start(form) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}
    <button class="close-button" data-close aria-label="Close reveal" type="button">
        <span aria-hidden="true">&times;</span>
    </button>
</div>